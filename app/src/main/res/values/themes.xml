<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HotelApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Action bar  -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Customize your theme here. -->
        <item name="android:colorForeground">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainPadding" parent="TextAppearance.AppCompat">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Peculiarities" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/grey_20</item>
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PeculiaritiesBooking" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Titles" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="Input">
        <item name="android:background">@color/grey_10</item>
    </style>


  <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="background">?attr/colorPrimaryVariant</item>
      <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/black</item>
        <item name="textFillColor">@color/black</item>
    </style>
</resources>